      console.log(userinfo, "assss")
      if (userinfo.Nickname) {
      // 已经有用户信息了

      that.imgurl = userinfo.LogoUrl
      that.nickname = userinfo.Nickname
      that.myPoint = userinfo.Balance
      wx.stopPullDownRefresh()
      that.$apply()
    } else {

    }
  }
  onPullDownRefresh(){
    var that=this
    request.httpGetOpenid(function(data) {

